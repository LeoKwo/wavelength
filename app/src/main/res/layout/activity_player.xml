<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbPlayer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/ivAlbumArt"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>

    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAlbumArt"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:text="placeholder"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llArtistAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvSongTitle"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:id="@+id/tvSongArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:textSize="14sp"
            android:text="placeholder"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvSongAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="placeholder"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/ivFav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSongTitle"
        app:layout_constraintBottom_toBottomOf="@id/llArtistAlbum"
        android:layout_marginRight="30dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_heart_outline"
        app:tint="@color/dark_gray" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/clControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/llArtistAlbum"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ivPrev"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_next"
            android:rotation="180"
            app:tint="@color/dark_blue"
            ></ImageView>

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_play"
            android:layout_marginHorizontal="50dp"
            app:tint="@color/dark_blue"
            ></ImageView>

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_next"
            app:tint="@color/dark_blue"
            ></ImageView>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>